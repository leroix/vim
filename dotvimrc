call pathogen#infect()
syntax enable
filetype plugin indent on

:set tabstop=4
:set shiftwidth=4
:set expandtab
:set nowrap

:nnoremap <Tab> :buffers<CR>:buffer<Space>
:inoremap <c-\> <c-x><c-n><down>

set background=dark
colorscheme solarized

" Remove menu bar
set guioptions-=m

" Remove toolbar
set guioptions-=T
